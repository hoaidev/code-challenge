generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum GameStatus {
  PUBLISHED
  DRAFT
  ARCHIVED
}

enum GameType {
  SINGLE_PLAYER
  MULTIPLAYER
}

enum GameGenre {
  ACTION
  ADVENTURE
  ROLE_PLAYING
  STRATEGY
}

model Game {
  id        Int      @id @default(autoincrement())
  slug      String   @unique
  name      String
  description String
  price     Float
  status    GameStatus @default(DRAFT)
  type      GameType @default(SINGLE_PLAYER)
  genre     GameGenre @default(ACTION)  
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
  deletedAt DateTime?

  gamePlays GamePlay[]
  @@map("games")
}

model Player {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
  deletedAt DateTime?

  gamePlays GamePlay[]
  @@map("players")
}

model GamePlay {
  id        Int      @id @default(autoincrement())
  gameId    Int @map("game_id")
  playerId  Int @map("player_id")
  score     Int @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
  deletedAt DateTime?

  game      Game @relation(fields: [gameId], references: [id])
  player    Player @relation(fields: [playerId], references: [id])

  @@map("games_plays")
}